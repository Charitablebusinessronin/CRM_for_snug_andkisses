# Development Dockerfile with TypeScript hot-reload
FROM node:18-alpine

WORKDIR /app

# Install development dependencies
RUN apk add --no-cache curl

# Create non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S crm -u 1001 -G nodejs

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install all dependencies (including dev)
RUN npm install

# Create logs directory
RUN mkdir -p logs && chown -R crm:nodejs logs

# Switch to non-root user
USER crm

# Copy source code (will be mounted in development)
COPY --chown=crm:nodejs src/ ./src/

# Expose port 4728
EXPOSE 4728

# Health check for development
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
  CMD curl -f http://localhost:4728/health || exit 1

# Start development server with hot reload
CMD ["npm", "run", "dev"]