{
  "service_name": "snug-kisses-crm-backend",
  "service_description": "Express.js backend for Snug & Kisses CRM with Zia AI integration",
  "stack": "Node20",
  "build": {
    "build_command": "npm install",
    "output_directory": "."
  },
  "run": {
    "startup_command": "node server.js"
  },
  "resources": {
    "memory": "1024",
    "timeout": "300"
  },
  "environment_variables": {
    "NODE_ENV": "production",
    "PORT": "9000"
  },
  "health_check": {
    "path": "/health",
    "interval": "30",
    "timeout": "10",
    "retries": "3"
  },
  "scaling": {
    "min_instances": "1",
    "max_instances": "5",
    "cpu_threshold": "70",
    "memory_threshold": "80"
  }
}
