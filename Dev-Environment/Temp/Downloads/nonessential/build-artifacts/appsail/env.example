# Snug & Kisses CRM Backend Environment Configuration
# Copy this file to .env and fill in your values

# Catalyst Configuration
X_ZOHO_CATALYST_LISTEN_PORT=9000
CATALYST_PROJECT_ID=48697000000023005
CATALYST_ENVIRONMENT_ID=891140386

# Node.js Configuration
NODE_ENV=production
PORT=9000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5369,https://snugcrm-891124823.development.catalystserverless.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/gif,application/pdf

# Logging
LOG_LEVEL=info
ENABLE_AUDIT_LOGGING=true

# Security
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Database
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100
