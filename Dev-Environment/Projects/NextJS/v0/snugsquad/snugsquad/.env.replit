# Replit Configuration
# Environment Variables - Add these to your Replit Secrets

# Zoho Catalyst Configuration
CATALYST_PROJECT_ID=your_catalyst_project_id_here
CATALYST_ENVIRONMENT_ID=your_catalyst_environment_id_here
CATALYST_OAUTH_CLIENT_ID=your_catalyst_oauth_client_id_here
CATALYST_OAUTH_CLIENT_SECRET=your_catalyst_oauth_client_secret_here
ZOHO_REGION=us
NEXT_PUBLIC_ZOHO_LOGIN_URL=https://accounts.zoho.com/oauth/v2/auth

# Zoho CRM Integration
ZOHO_CRM_CLIENT_ID=your_zoho_crm_client_id_here
ZOHO_CRM_CLIENT_SECRET=your_zoho_crm_client_secret_here
ZOHO_CRM_REFRESH_TOKEN=your_zoho_crm_refresh_token_here

# HIPAA Compliance
HIPAA_ENCRYPTION_KEY=your_hipaa_encryption_key_here

# Development Configuration
NEXT_PUBLIC_DEV_BYPASS_AUTH=0
NODE_ENV=production

# Feature Flags
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# API Configuration
NEXT_PUBLIC_API_BASE_URL=/api