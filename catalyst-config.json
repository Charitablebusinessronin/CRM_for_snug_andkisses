{
  "projectName": "snugandkisses",
  "projectId": "48697000000011095",
  "environment": "development",
  "functions": [
    {
      "name": "auth-login",
      "path": "functions/auth/login.js",
      "type": "basic_io",
      "memory": 128,
      "timeout": 30
    },
    {
      "name": "customers-api",
      "path": "functions/api/v1/customers/index.js",
      "type": "basic_io",
      "memory": 256,
      "timeout": 60
    },
    {
      "name": "appointments-api",
      "path": "functions/api/v1/appointments/index.js",
      "type": "basic_io",
      "memory": 256,
      "timeout": 60
    }
  ],
  "datastore": {
    "tables": [
      {
        "name": "Users",
        "columns": [
          { "name": "email", "type": "text", "unique": true },
          { "name": "password", "type": "text" },
          { "name": "firstName", "type": "text" },
          { "name": "lastName", "type": "text" },
          { "name": "role", "type": "text" },
          { "name": "phone", "type": "text" },
          { "name": "avatar", "type": "text" }
        ]
      },
      {
        "name": "Customers",
        "columns": [
          { "name": "firstName", "type": "text" },
          { "name": "lastName", "type": "text" },
          { "name": "email", "type": "text", "unique": true },
          { "name": "phone", "type": "text" },
          { "name": "address", "type": "text" },
          { "name": "emergencyContact", "type": "text" },
          { "name": "children", "type": "text" },
          { "name": "preferences", "type": "text" },
          { "name": "status", "type": "text" },
          { "name": "crmId", "type": "text" }
        ]
      },
      {
        "name": "Appointments",
        "columns": [
          { "name": "customerId", "type": "bigint" },
          { "name": "contractorId", "type": "bigint" },
          { "name": "serviceType", "type": "text" },
          { "name": "startDateTime", "type": "datetime" },
          { "name": "endDateTime", "type": "datetime" },
          { "name": "location", "type": "text" },
          { "name": "status", "type": "text" },
          { "name": "notes", "type": "text" },
          { "name": "rate", "type": "double" },
          { "name": "totalAmount", "type": "double" }
        ]
      }
    ]
  },
  "filestore": {
    "folders": [{ "name": "customer-documents" }, { "name": "contractor-certifications" }, { "name": "invoices" }]
  }
}
