{
  "project": {
    "name": "snug-kisses-business-suite",
    "description": "Unified Zoho One-like business suite for Snug & Kisses",
    "version": "1.0.0",
    "type": "fullstack",
    "framework": "nextjs"
  },
  "services": {
    "appsail": {
      "enabled": true,
      "service_name": "snug-kisses-unified-backend",
      "source": {
        "path": "./",
        "build_command": "npm run build",
        "run_command": "npm start"
      },
      "port": 5000,
      "host": "0.0.0.0"
    },
    "datastore": {
      "enabled": true,
      "tables": [
        {
          "name": "customers",
          "description": "Customer relationship management"
        },
        {
          "name": "deals",
          "description": "Sales pipeline and deals"
        },
        {
          "name": "support_tickets",
          "description": "Customer support ticketing system"
        },
        {
          "name": "invoices",
          "description": "Financial invoicing system"
        },
        {
          "name": "invoice_line_items",
          "description": "Invoice line items"
        },
        {
          "name": "payments",
          "description": "Payment tracking"
        },
        {
          "name": "employees",
          "description": "HR employee management"
        },
        {
          "name": "time_entries",
          "description": "Employee time tracking"
        },
        {
          "name": "leave_requests",
          "description": "Employee leave management"
        },
        {
          "name": "campaigns",
          "description": "Marketing campaigns"
        },
        {
          "name": "campaign_logs",
          "description": "Email campaign tracking"
        },
        {
          "name": "users",
          "description": "User authentication and profiles"
        },
        {
          "name": "audit_logs",
          "description": "HIPAA compliance audit trail"
        },
        {
          "name": "client_assignments",
          "description": "Client-employee assignments"
        },
        {
          "name": "shift_notes",
          "description": "Employee shift documentation"
        }
      ]
    },
    "functions": [
      {
        "name": "crm-api",
        "source": "./functions",
        "entry_point": "index.js",
        "type": "basic_io"
      },
      {
        "name": "analytics-engine",
        "source": "./functions/analytics-engine",
        "entry_point": "main.py",
        "type": "advanced_io"
      },
      {
        "name": "contact-manager",
        "source": "./functions/contact-manager",
        "entry_point": "main.py",
        "type": "advanced_io"
      },
      {
        "name": "lead-processor",
        "source": "./functions/lead-processor",
        "entry_point": "main.py",
        "type": "advanced_io"
      },
      {
        "name": "quick-actions",
        "source": "./functions/quick-actions",
        "entry_point": "main.py",
        "type": "advanced_io"
      }
    ]
  },
  "environment": {
    "development": {
      "env_id": "891140386"
    }
  }
}